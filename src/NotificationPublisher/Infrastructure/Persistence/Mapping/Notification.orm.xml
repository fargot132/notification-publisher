<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\NotificationPublisher\Domain\Notification">
        <indexes>
            <index name="user_id_value_idx" columns="user_id_value"/>
        </indexes>
        <id name="id" type="uuid"/>
        <embedded name="userId" class="App\NotificationPublisher\Domain\ValueObject\UserId"/>
        <embedded name="email" class="App\NotificationPublisher\Domain\ValueObject\Email"/>
        <embedded name="phoneNumber" class="App\NotificationPublisher\Domain\ValueObject\PhoneNumber"/>
        <embedded name="subject" class="App\NotificationPublisher\Domain\ValueObject\Subject"/>
        <embedded name="content" class="App\NotificationPublisher\Domain\ValueObject\Content"/>
        <field name="status" enum-type="App\NotificationPublisher\Domain\ValueObject\Status" length="20"/>
        <field name="createdAt" type="datetime_immutable"/>
    </entity>
</doctrine-mapping>
